import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
import numpy as np

import plotly.offline as py
import plotly.tools as tls
import plotly.graph_objs as go
py.init_notebook_mode(connected=True)
%matplotlib inline
import plotly.figure_factory as FF


import sys
import warnings

if not sys.warnoptions:
    warnings.simplefilter("ignore")

from ipywidgets import interact, interactive, fixed
import pandas as pd
import ipywidgets as widgets
from IPython.display import display

datacon=pd.DataFrame("F:\\Libraries\\reaction\\Desktop\\concrete_data.csv")

blast_furnace_slag = go.Histogram(
    x=datacon["blast_furnace_slag"],
    opacity=0.75,
    name="blast_furnace_slag"
)
fine_aggregate = go.Histogram(
    x=datacon["fine_aggregate "],
    opacity=0.75,
    name="fine_aggregate"
)
age= go.Histogram(
    x=datacon["age"],
    opacity=0.75,
    name="age"
)
cement= go.Histogram(
    x=datacon["cement"],
    opacity=0.65,
    name="cement"
)
fly_ash= go.Histogram(
    x=datacon["fly_ash"],
    opacity=0.75,
    name="fly_ash"
)
water= go.Histogram(
    x=datacon["water"],
    opacity=0.75,
    name="water"
)
superplasticizer= go.Histogram(
    x=datacon["superplasticizer"],
    opacity=0.75,
    name="superplasticizer"
)
coarse_aggregate= go.Histogram(
    x=datacon["coarse_aggregate"],
    opacity=0.75,
    name="coarse_aggregate"
)
data = [blast_furnace_slag, fine_aggregate,age,cement,fly_ash,water,superplasticizer,coarse_aggregate]
layout = go.Layout(barmode='overlay',legend=dict(
        x=0.1,
        y=0.8
    ))
fig = go.Figure(data=data, layout=layout)

py.iplot(fig, filename='overlaid histogram')
